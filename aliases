# System aliases
alias less='less -N'
alias mount='mount | column -t'
alias df='df -hT --total'

# Main config files
alias e='$EDITOR'
alias ev='$EDITOR ~/.vimrc'
alias ez='$EDITOR ~/.zshrc'
alias ea='$EDITOR ~/.aliases'
alias en='$EDITOR ~/.config/nvim/init.vim'
alias ei='$EDITOR ~/.config/i3/config'
alias et='$EDITOR ~/.config/termite/config'
alias es='$EDITOR ~/.config/sxhkd/sxhkdrc'
